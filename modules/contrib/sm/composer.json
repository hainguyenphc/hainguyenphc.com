{
    "name": "drupal/sm",
    "description": "Integrates Symfony Messenger with Drupal.",
    "type": "drupal-module",
    "minimum-stability": "dev",
    "bin": [
        "bin/sm"
    ],
    "require": {
        "composer-runtime-api": "^2.2",
        "php": ">=8.1",
        "drupal/core": ">=10.1",
        "symfony/messenger": "^6.3",
        "symfony/property-access": "^6.2",
        "symfony/runtime": "^6.2"
    },
    "require-dev": {
        "composer/installers": "^2",
        "cweagans/composer-patches": "^1.7",
        "drupal/core-dev": "^10.1",
        "drupal/symfony_messenger_doctrine": "*",
        "micheh/phpcs-gitlab": "^1.1",
        "mockery/mockery": "^1.5",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-deprecation-rules": "*",
        "phpstan/phpstan-phpunit": "1.4.x-dev",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/phpunit": ">=9",
        "previousnext/coding-standard": "^1"
    },
    "suggest": {
        "drupal/sm_transport_doctrine": "Drupal Symfony Messenger Doctrine transport"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "php-http/discovery": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "enable-patching": true,
        "patches-file": "composer.patches.json",
        "branch-alias": {
            "dev-1.0.x": "1.0.x-dev"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ]
}
