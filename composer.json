{
    "name": "drupal/legacy-project",
    "description": "Project template for Drupal 9 projects with composer following drupal/drupal layout",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=8.1",
        "behat/behat": "^3.12",
        "composer/installers": "^2.0",
        "cweagans/composer-patches": "^1.7",
        "drupal/address": "^2.0",
        "drupal/admin_toolbar": "^3.2",
        "drupal/allowed_languages": "^2.0@alpha",
        "drupal/antibot": "^2.0",
        "drupal/automatic_updates": "^3.0",
        "drupal/back_to_top": "^3.0",
        "drupal/better_exposed_filters": "^6.0",
        "drupal/blazy": "^2.22",
        "drupal/block_visibility_groups": "^2.0",
        "drupal/checkbox_radio_buttons_multi_columns": "^2.0@alpha",
        "drupal/chosen": "^4.0",
        "drupal/ckeditor": "^1.0",
        "drupal/ckeditor5_fullscreen": "^1.0@beta",
        "drupal/classy": "^1.0",
        "drupal/coffee": "^1.3",
        "drupal/colorbox": "^2.0",
        "drupal/colorbox_inline": "^2.0",
        "drupal/colorbox_load": "^1.3",
        "drupal/conditional_fields": "^4.0@alpha",
        "drupal/config_ignore": "^3.2",
        "drupal/config_split": "^1.9",
        "drupal/core-composer-scaffold": "10.3.10",
        "drupal/core-project-message": "10.3.10",
        "drupal/core-recommended": "10.3.10",
        "drupal/core-vendor-hardening": "10.2.3",
        "drupal/ctools": "^4.0",
        "drupal/devel": "^5.1",
        "drupal/diff": "^1.1",
        "drupal/dynamic_entity_reference": "^4.0@alpha",
        "drupal/easy_breadcrumb": "^2.0",
        "drupal/eca": "^1.1",
        "drupal/editoria11y": "^2.1",
        "drupal/entity_reports": "^2.0",
        "drupal/entitygroupfield": "^2.0@alpha",
        "drupal/environment_indicator": "^4.0",
        "drupal/feeds": "^3.0@beta",
        "drupal/field_group": "^3.4",
        "drupal/file_mdm": "^3.0",
        "drupal/filter_perms": "^2.0@RC",
        "drupal/fontawesome": "^2.26",
        "drupal/fontyourface": "3.x-dev@dev",
        "drupal/gin": "^3.0@rc",
        "drupal/gin_login": "^2.0",
        "drupal/gin_toolbar": "^1.0@rc",
        "drupal/group": "^3.2",
        "drupal/honeypot": "^2.1",
        "drupal/imagemagick": "^3.7",
        "drupal/key": "^1.19",
        "drupal/languageicons": "^2.0@beta",
        "drupal/layout_paragraphs": "^2.1",
        "drupal/link_attributes": "^2.1",
        "drupal/linkchecker": "^2.0@alpha",
        "drupal/linkit": "^6.1",
        "drupal/menu_block": "^1.10",
        "drupal/metatag": "^2.0",
        "drupal/paragraphs": "^1.16",
        "drupal/pathauto": "^1.12",
        "drupal/project_browser": "^2.0@alpha",
        "drupal/rabbit_hole": "^2.0@alpha",
        "drupal/rdf": "^2.0",
        "drupal/responsive_menu": "4.4.x-dev@dev",
        "drupal/rest_api_authentication": "^2.0",
        "drupal/restui": "^1.22",
        "drupal/rules": "^4.0",
        "drupal/schema_metatag": "^3.0",
        "drupal/search_api": "^1.37",
        "drupal/search_api_attachments": "^10.0",
        "drupal/search_api_solr": "^4.3",
        "drupal/select2": "^1.15",
        "drupal/simple_oauth": "^5.2",
        "drupal/simple_sitemap": "^4.1",
        "drupal/simplesamlphp_auth": "^4.0",
        "drupal/sitewide_alert": "^2.2",
        "drupal/smart_trim": "^2.1",
        "drupal/stable": "^2.0",
        "drupal/symfony_mailer": "^1.4",
        "drupal/taxonomy_access_fix": "^4.0",
        "drupal/tb_megamenu": "^3.0@alpha",
        "drupal/token": "^1.11",
        "drupal/twig_tweak": "^3.2",
        "drupal/ultimate_cron": "^2.0@alpha",
        "drupal/video_embed_field": "^2.5",
        "drupal/views_attach_library": "^2.0",
        "drupal/views_data_export": "^1.4",
        "drupal/views_templates": "^1.3",
        "drupal/webform": "^6.2@RC",
        "drupal/webprofiler": "^10.1",
        "drush/drush": "^12",
        "microsoft/microsoft-graph": "^1.56",
        "npm-asset/select2": "^4.0",
        "oomphinc/composer-installers-extender": "^2.0",
        "simplesamlphp/simplesamlphp-module-metarefresh": "^1.2",
        "twig/intl-extra": "~3.8.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/core-vendor-hardening": true,
            "oomphinc/composer-installers-extender": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "simplesamlphp/composer-module-installer": true,
            "simplesamlphp/composer-xmlprovider-installer": true,
            "tbachert/spi": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "./"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "core": [
                "type:drupal-core"
            ],
            "libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/legacy-project template!               </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        },
        "enable-patching": true,
        "patches-file": "composer.patches.json",
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "require-dev": {
        "behat/mink-goutte-driver": "^2.0",
        "drupal/coder": "^8.3",
        "drupal/core-dev": "10.2.3",
        "drupal/devel_kint_extras": "^1.1",
        "drupal/drupal-extension": "^5.0@RC",
        "mglaman/drupal-check": "^1.4",
        "mglaman/phpstan-drupal": "^1.1",
        "palantirnet/drupal-rector": "^0.13.1",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpspec/prophecy-phpunit": "^2",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.9",
        "phpstan/phpstan-deprecation-rules": "^1.0"
    },
    "scripts": {
        "post-install-cmd": [
            "if [ -e vendor/simplesamlphp/simplesamlphp/config ]; then rm -r vendor/simplesamlphp/simplesamlphp/config; fi",
            "ln -s ../../../simplesamlphp vendor/simplesamlphp/simplesamlphp/config"
        ],
        "post-update-cmd": [
            "if [ -e vendor/simplesamlphp/simplesamlphp/config ]; then rm -r vendor/simplesamlphp/simplesamlphp/config; fi",
            "ln -s ../../../simplesamlphp vendor/simplesamlphp/simplesamlphp/config"
        ],
        "post-drupal-scaffold-cmd": [
            "patch -p1 < patches/simplesamlphp-simplesaml-path-access.patch"
        ]
    }
}
