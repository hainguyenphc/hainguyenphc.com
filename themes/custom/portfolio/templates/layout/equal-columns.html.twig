{% if content %}

{% set columns = 0 %}
{% for region in layout.getRegionNames if content[region] %}
  {% set columns = columns + 1 %}
{% endfor %}

{% if columns > 0 %}
<div {{ attributes.addClass('row') }}>
  {% for region in layout.getRegionNames if content[region] %}
  <div class="components-column components-columns-{{ columns }}">
    {{ content[region] }}
  </div>
  {% endfor %}
</div>
{% endif %}

{% endif %}
