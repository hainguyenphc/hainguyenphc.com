{% if content %}
	{% set columns = 0 %}
	{% for region in layout.getRegionNames %}
		{% if content[region] %}
			{% set columns = columns + 1 %}
		{% endif %}
	{% endfor %}

	{% if columns > 0 %}
		<div {{ attributes.addClass('row') }}>
			{% for region in layout.getRegionNames %}
				{% if if content[region] %}
					<div class="components-column components-columns-{{ columns }}">
						{{ content[region] }}
					</div>
				{% endif %}
			{% endfor %}
		</div>
	{% endif %}
{% endif %}
