<div {{ attributes.addClass('geolocation-common-map').addClass('hide-item-on-mobile') }} {% if centre.lat_north_east is not empty and centre.lng_north_east is not empty and centre.lat_south_west is not empty and centre.lng_south_west is not empty %} data-centre-lat-north-east="{{ centre.lat_north_east }}" data-centre-lng-north-east="{{ centre.lng_north_east }}" data-centre-lat-south-west="{{ centre.lat_south_west }}" data-centre-lng-south-west="{{ centre.lng_south_west }}" {% endif %} {% if centre.lat is not empty and centre.lng is not empty %} data-centre-lat="{{ centre.lat }}" data-centre-lng="{{ centre.lng }}" {% endif %}>
    <div class="geolocation-map-controls">
      {% if controls is not empty %}
        {% for control in controls %}
          {{ control }}
        {% endfor %}
      {% endif %}
    </div>

    <div class="geolocation-map-container geolocation-common-map-container js-show"></div>

    {% if children is not empty %}
        {{ children }}
    {% endif %}
</div>
