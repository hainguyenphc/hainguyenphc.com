{% else %}
	{% if country_code == 'US' %}
		{% set suffix = 'miles' %}
		{% set multiplier = 0.621371 %}
		{% set separator = ' ' %}
		{% set value = output|number_format * multiplier %}
		{% set value = value|number_format(1, '.') %}
	{% else %}
		{% set suffix = 'km' %}
		{% set multiplier = 1 %}
		{% set separator = '' %}
		{% set value = output %}
	{% endif %}
	{{ value }}{{ separator }}{{ suffix }}
{% endif %}
